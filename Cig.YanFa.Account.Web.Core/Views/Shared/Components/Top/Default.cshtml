    </div>
    <div class="clearfix">
    </div>
    <!--子菜单开始-->
    <div class="mainmenu_bottom" style="        *height: 35px;">
        <div id="div">
            <ul id="ul" class="nav">
                @foreach (NavigationInfo item in Model.secondModules.Take(10))
                {
                    <li class="drop-down tb-site2">
